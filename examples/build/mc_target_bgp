if [ "$OPENSS_PREFIX" = "" ]
then
  echo "OPENSS_PREFIX not set."
  echo "For oss developers that's usually .../GUI/plugin/lib/openspeedshop"
  echo "- or -"
  echo "export OPENSS_PREFIX=$OPENSS_PLUGIN_PATH/../.."
  if [ "$OPENSS_PLUGIN_PATH" != "" ]
  then
    export OPENSS_PREFIX=$OPENSS_PLUGIN_PATH/../..;
    echo "WARNING: Defaulting to developers location..."
  fi 
#  exit
fi
if test -d plugins/panels
then
# from CSCS ela machine:
./configure --prefix=/home/jgalaro/oss/bgp --with-instrumentor=offline --with-tls=implicit --with-target-binutils=/usr --with-target-libunwind=/home/jgalaro/oss/bgp --with-target-papi=/software/linux-sles10-ppc64/apps/papi-c-3.9.0 --with-target-libmonitor=/home/jgalaro/oss/bgp ; make clean: make offlinestatic; make offlinestatic-install
# local on laptop for testing
#./configure --prefix=/opt/OSSCRAY/cray-xt5 --with-instrumentor=offline --with-tls=implicit --with-target-binutils=/usr --with-target-libunwind=/opt/OSSCRAY/cray-xt5 --with-target-papi=/opt/OSS-mrnet --with-target-libmonitor=/opt/OSSCRAY/cray-xt5 ; make clean; make offlinestatic; make offlinestatic-install
else
  echo NOTE: This must be run from the 'current' directory...
fi
